/* pages/index/index.wxss */
#container{
  width: 100%;
  background: #ECECEC;
}
/*轮播图*/
swiper{
  height: 480rpx;
}
.silder-image{
  width: 100%;
  height: 480rpx;
}
/*中间商家地址菜单栏*/
#localtion{
  width: 94%;
  height: 120rpx;
  margin: 2% 0;
  padding: 0 3%;
  background: #FFFFFF;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}
#localtion image{
  width: 50rpx;
  height: 50rpx;
  padding: 20rpx;
  background: #ECECEC;
  border-radius: 45rpx;
  margin-right: 1%;
  order: 1;
}
#localtion text{
  color: #2c2c2c;
  font-size: 30rpx;
  order: 1;
  flex: 1 0 auto;
}
#localtion button{
  width: 170rpx;
  height: 55rpx;
  line-height: 55rpx;
  color: #707070;
  text-align: center;
  font-size: 26rpx;
  border: 1px solid #ECECEC;
  border-radius: 30rpx;
  order: 2;
  background: #FFFFFF;
}
#localtion button::after{
  border: none;
}
/*tag底部功能区*/
#bottom{
  padding: 6% 0;
  background: #FFFFFF;
}
.tableView{
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;
}
#tableViewTop{
  margin-bottom: 2%;
}
.tag{
  flex: 1 0 auto;
  margin: 1%;
  text-align: center;
}
.tag image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 55rpx;
  display: block;
  padding: 20rpx;
  margin: 0 auto;
}
.tag text{
  color: #707070;
  font-size: 26rpx;
}
#tag1  image{
  background: #66D52A;
}
#tag2  image{
  background: #F8B828;
}
#tag3  image{
  background: #25A1FA;
}
#tag4  image{
  background: #249EFB;
}
#tag5  image{
  background: #F65625;
}
#tag6  image{
  background: #F4424D;
}